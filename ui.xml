<interface>
  <object id="window" class="GtkWindow">
    <property name="visible">True</property>
    <property name="title">Grid</property>
    <property name="border-width">10</property>
    <child>
      <object id="grid" class="GtkGrid">
        <property name="visible">True</property>
        <child>
          <object id="render" class="GtkGLArea">
            <property name="visible">True</property>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">0</property>
            <property name="width">4</property>
          </packing>
        </child>
        <child>
          <object id="button_left" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">&lt;-</property>
            <accelerator key="Left" signal="clicked" modifiers="GDK_LOCK_MASK"/>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
        <child>
          <object id="button_rotate_left" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">RL</property>
            <accelerator key="Down" signal="clicked" modifiers="GDK_LOCK_MASK"/>
          </object>
          <packing>
            <property name="left-attach">1</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
        <child>
          <object id="button_rotate_right" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">RR</property>
            <accelerator key="Up" signal="clicked" modifiers="GDK_LOCK_MASK"/>
          </object>
          <packing>
            <property name="left-attach">2</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
        <child>
          <object id="button_right" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">-&gt;</property>
            <accelerator key="Right" signal="clicked" modifiers="GDK_LOCK_MASK"/>
          </object>
          <packing>
            <property name="left-attach">3</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
        <child>
          <object id="quit" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">Quit</property>
            <accelerator key="Q" signal="clicked"/>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">101</property>
            <property name="width">2</property>
          </packing>
        </child>
      </object>
      <packing>
      </packing>
    </child>
  </object>
</interface>
